<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- Database connection settings -->
		<!-- Chemin vers driver JDBC -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<!-- Chemin d'acces a la base -->
		<property name="connection.url">jdbc:mysql://localhost:3306/tutorial</property>
		<property name="connection.username">sa</property>
		<property name="connection.password"></property>

		<!-- JDBC connection pool, algorithme de pool de connexion d'hibernate 
			==> utiliser c3po -->
		<property name="connection.pool_size">1</property>

		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>

		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">false</property>

		<property name="hbm2ddl.auto">validate</property>

		<mapping class="com.ald.projet.entities.Oeuvre" />
		<mapping class="com.ald.projet.entities.Collection" />
		<mapping class="com.ald.projet.entities.Artiste" />
		<mapping class="com.ald.projet.entities.Conservateur" />
		<mapping class="com.ald.projet.entities.Libraire" />


	</session-factory>
</hibernate-configuration>